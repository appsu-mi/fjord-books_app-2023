<div class="container">
  <strong>メールアドレス: </strong><br />
  <p class="border-bottom ms-3"><%= @user.email %></p>

  <strong>郵便番号: </strong><br />
  <p class="border-bottom ms-3"><%= @user.postal_code %></p>

  <strong>住所: </strong><br />
  <p class="border-bottom ms-4"><%= @user.address %></p>

  <strong>名前: </strong><br />
  <p class="border-bottom ms-3"><%= @user.name %></p>

  <strong>自己紹介文: </strong><br />
  <p class="border-bottom ms-3"><%= @user.self_introduction %></p>

  <% if @user == current_user %>
  <nav class="page-nav">
    <%= link_to t('パスワード又はメールアドレスを変更する'), edit_user_path %>
  </nav>
  <% end %>
  <%= link_to 'ユーザー一覧',  users_path%>
</div>
