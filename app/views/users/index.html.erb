<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
    <ul>
      <% if user == current_user %>
        <li><%= link_to "#{user.name}(あなた)",  user_path(user)%></li>
      <% else %>
        <li><%= link_to user.name,  user_path(user)%></li>
      <% end %>
    </ul>
  <% end %>
  <%= paginate @users %>
</div>
