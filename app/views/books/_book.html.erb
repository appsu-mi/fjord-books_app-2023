<div id="<%= dom_id book %>">
  <p>
    <strong><%= t("html_text.book_items.title") %></strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t("html_text.book_items.memo") %></strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t("html_text.book_items.author") %></strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t("html_text.book_items.picture") %></strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
